# Server Configuration
NODE_ENV=development
PORT=3003
HOST=0.0.0.0

# Database Configuration
PG_HOST=localhost
PG_PORT=5432
PG_DATABASE=mito_db
PG_USER=mito_user
PG_PASSWORD=mito_password
DB_POOL_MIN=2
DB_POOL_MAX=10

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# SMTP Configuration
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your-email@example.com
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@mito.com
SMTP_SECURE=false

# Firebase Configuration (Push Notifications)
FIREBASE_KEY={"type":"service_account","project_id":"your-project","private_key":"your-key","client_email":"your-email"}

# Retry Configuration
MAX_RETRY_ATTEMPTS=3
RETRY_DELAY=5000

# Rate Limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIME_WINDOW=60000
