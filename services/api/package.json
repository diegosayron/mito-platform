{
  "name": "@mito/api",
  "version": "1.0.0",
  "description": "MITO Platform Backend API",
  "main": "dist/server.js",
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc && npm run copy-migrations",
    "copy-migrations": "cpy 'src/database/migrations/*.sql' dist/database/migrations",
    "start": "node dist/server.js",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "migrate": "tsx src/database/migrate.ts",
    "migrate:prod": "node dist/database/migrate.js"
  },
  "keywords": [
    "mito",
    "api",
    "backend",
    "fastify"
  ],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "@fastify/cors": "^9.0.1",
    "@fastify/helmet": "^12.0.1",
    "@fastify/rate-limit": "^10.1.1",
    "dotenv": "^16.4.5",
    "fastify": "^5.2.0",
    "jsonwebtoken": "^9.0.3",
    "pg": "^8.13.1",
    "pino": "^9.5.0",
    "pino-pretty": "^13.0.0"
  },
  "devDependencies": {
    "@types/jsonwebtoken": "^9.0.10",
    "@types/node": "^22.10.2",
    "@types/pg": "^8.11.10",
    "@typescript-eslint/eslint-plugin": "^8.18.1",
    "@typescript-eslint/parser": "^8.18.1",
    "cpy-cli": "^6.0.0",
    "eslint": "^9.17.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.2"
  }
}
